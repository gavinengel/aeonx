.todoapp {
  #entry {
    onsubmit: $Handler.addTodo;
  }
  .clear-completed {
    onclick: $Handler.clearCompleted;
  }
  .filters {
    a {
      @ondblclick {
        class!: "selected";
      }
    }
  }
  .toggle {
    @onclick {
      someattr: $Handler.toggleTodo;
    } 
  }
  .destroy {
    @onclick {
      someattr: $Handler.delTodo;
    }
  }
  .label {
    @ondblclick {
      someattr: $Handler.editTodo;
    } 
  }
  .zzz {
    onblur: $Handler.blurTodo;
  }
}