{
	"#calculator": {
		".eval": {
			"@onclick": {
				".screen & value": "`$Calculator.onClickEqFilter`"
			}
		},
		".num": {
			"@on(click)": {
				".screen & value": ["&", "`value`"]
			}
		},
		".dec": {
			"@onclick": {
				".screen & value": ["&", "`$Calculator.onClickDecimal`"]
			}
		},
		".operator": {
			"@onclick": {
				".screen & value": ["&", "`$Calculator.onClickOperatorFilter`"]	
			}
		},
		".clear": {
			"@onclick": {
				".screen & value": ""
			}
		}
	}
}